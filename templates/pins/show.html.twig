{% extends 'layouts/base.html.twig' %}


{% block title pin.title %}  

{% block body %}
 


<article>
    <h1>{{ pin.title}}</h1>
    <p>{{ pin.description }}</p>

</article>
<a href="{{ path('app_pins_edit',{id:pin.id} )}}"> Edit </a>
<a href="#" onclick="event.preventDefault; confirm('Etes vous sÃ»r de vouloir supprimer') && document.getElementById('js_pin-delete').submit();"> Delete </a>

<form id="js_pin-delete" action="{{ path('app_pins_delete',{id:pin.id} )}}" method="POST" style="display: none;">
